{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=aiassistant.db"
  },
  "FreePBX": {
    "ServerAddress": "192.168.1.100",
    "SipPort": 5060,
    "Extension": "1000",
    "Password": "your_extension_password",
    "DisplayName": "AI Assistant"
  },
  "Azure": {
    "SpeechKey": "your_azure_speech_key",
    "SpeechRegion": "eastus",
    "OpenAIKey": "your_azure_openai_key",
    "OpenAIEndpoint": "https://your-resource.openai.azure.com/",
    "DeploymentName": "gpt-4o-mini"
  },
  "Security": {
    "JwtSecret": "your-very-secure-secret-key-min-32-chars",
    "JwtIssuer": "FreePBXAIAssistant",
    "JwtAudience": "FreePBXAIAssistantUsers",
    "SessionTimeoutMinutes": 60
  }
}